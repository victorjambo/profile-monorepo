{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalDotEnv": [".env.development.local"],
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_HOTJAR", "NEXT_PUBLIC_GOOGLE_ANALYTICS"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "check-types": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [".env.development.local", ".env.local", ".env.development", ".env"]
    },
    "clean": {
      "cache": false
    }
  }
}
